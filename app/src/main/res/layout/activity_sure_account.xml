<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bggraycolor"
    tools:context=".me.account.SureAccountActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:src="@mipmap/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/White"
            android:text="转账" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="24dp"
        android:background="@color/White"
        android:elevation="4dp"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_tortoise"
            android:elevation="4dp"
            android:translationZ="4dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="伟大的渺小"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:translationZ="4dp"
            />
        <TextView
            android:id="@+id/id"
            android:visibility="gone"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ID:6999999"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:translationZ="4dp"
            />



        
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput"
            android:layout_below="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="转账金额:"
                android:textColorHint="@color/Gray600"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/button"
            android:layout_below="@+id/textinput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_bt_weixin"
            android:elevation="4dp"
            android:translationZ="4dp"
            android:text="转帐"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="24sp"
            />
    </RelativeLayout>

</LinearLayout>