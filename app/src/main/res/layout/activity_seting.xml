<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#efefef"
    android:layout_height="match_parent"
    tools:context=".me.SetingActivity">



    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/back"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            tools:text="title"
            android:text="修改登录密码"
            android:textColor="@color/White"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/bt_loginout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="退出登录"
            android:textColor="@color/White"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:background="@color/White"
        android:id="@+id/til_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:paddingLeft="16dp"
            android:id="@+id/tie_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#DEDDDD"
            android:background="@null"
            android:hint="请输入手机号" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:id="@+id/til_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:paddingLeft="16dp"
            android:id="@+id/tie_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#DEDDDD"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入旧密码" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:id="@+id/til_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:paddingLeft="16dp"
            android:id="@+id/tie_newpassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#DEDDDD"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入新密码" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:paddingLeft="16dp"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:id="@+id/til_surepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:paddingLeft="16dp"
            android:id="@+id/tie_surepassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#DEDDDD"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请再次输入新密码" />
    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/bt_submit"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/login_bt_weixin"
            android:layout_width="150dp"
            android:text="确定"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>